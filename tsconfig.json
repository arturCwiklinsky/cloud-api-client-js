{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2015",
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "Node",
    "typeRoots": [
      "./typings",
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "exclude": [
    "node_modules"
  ]
}
